@using HairSalon.Models
@model System.Collections.Generic.List<Stylist>

<table>
  <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Client Count</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="5">No Stylists Yet</td></tr>
    }

    @foreach (Stylist stylist in Model)
    {
      <tr>
        <td>
          <a class="btn btn-secondary" href="/stylists/@stylist.Id">
            See Details
          </a>
          <a class="btn btn-secondary" href="/stylists/@stylist.Id/clients">
            See Clients
          </a>
          <a
            asp-controller="Client"
            asp-action="AddNewToStylist"
            asp-route-stylistId="@stylist.Id"
            class="btn btn-primary">
            Add Client
          </a>
          <a class="btn btn-danger" href="/stylists/@stylist.Id/delete">
            Delete
          </a>
        </td>
        <td>@stylist.Id</td>
        <td>@stylist.Name</td>
        <td>@stylist.Description</td>
        <td>@stylist.Clients.Count</td>
      </tr>
    }
  </tbody>
</table>